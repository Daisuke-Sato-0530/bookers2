<div class = "container px-5 px-sm-0">
  <div class = "row">

    <%= render 'users/sidebar', user: @user %>

    <div class = "col-md-8 offset-md-1">
      <h1>Users</h1>
      <table class = "table table-hover table-inverse">
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user|%>
            <tr>
              <th>
              <%= attachment_image_tag user, :profile_image, :fill, 50, 50,fallback: "no_image.jpg", size:'50x50'%>
              </th>
              <th><%= user.name %></th>
              <th><%= link_to 'Show',user_path(user) %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>