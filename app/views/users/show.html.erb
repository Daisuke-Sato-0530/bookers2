<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-md-3">
      <h1>Userinfo</h1>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'100x100' %>
      <table class = "table">
        <tr>
          <th>Name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>Introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>

      <div class = "row">
          <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
          <% end %>
      </div>

      <h1>New book</h1>
        <%= form_with model:@book,url:'/books', local:true do |f| %>
          <h4>title</h4>
            <%= f.text_field :title %>
          <h4>body</h4>
            <%= f.text_area :body %>
            <%= f.submit 'Create Book',class: "btn btn-outline-secondary btn-block" %>
        <% end %>
    </div>
    <div class = "col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class = "table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>title</th>
            <th>body</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book|%>
            <tr>
              <th>
                <%= link_to user_path(book.user) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg' %>
                <% end %></th>
              <th>
                <%= link_to book_path(book) do %>
                <%= book.title %>
                <% end %>
              </th>
              <th><%= book.body %></th>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>