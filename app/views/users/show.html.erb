<h1>userinfo</h1>
<h3>ユーザー名</h3>
<%= @user.name %>
<h3>メールアドレス</h3>
<%= @user.email %>



<h1>自分の投稿一覧</h1>


<h1>editへのリンクボタン</h1>
<%= link_to 'edit', edit_user_path(current_user.id) %>



<h1>NewBook</h1>
<%= form_with model:@book,url:'/books', local:true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>