<% if  @user.errors.any? %>
  <div id="error_explanation">
    <ul class = "error_list">
      <h4 class = "error_title"><%= pluralize(@user.errors.count, "error") %> prohibited this map from being saved:</h2>
      <% @user.errors.full_messages.each do |message| %>
        <li class="error_msg"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>プロフィール編集</h2>
      <%= form_with model:@user, local:true do |f| %>
      <div class = "form-group">
        <label>Name</label>
        <%= f.text_field :name, :class => "form-control name" %>
      </div>

      <div class = "form-group">
        <label>Profile image</label>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60 %>
        <%= f.attachment_field :profile_image, :class => "form-control-file user_image" %>
      </div>

      <div class = "form-group">
        <label>introduction</label>
        <%= f.text_area :introduction, :class => "form-control introduction" %>
      </div>
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>

    </div>
  </div>
</div>