

<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-md-3">
      <h1>userinfo</h1>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
      <table class = "table">
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>

      <div class = "row">
          <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
          <% end %>
      </div>

      <h1>New book</h1>
        <%= form_with model:@book,url:'/books', local:true do |f| %>
          <h4>title</h4>
            <%= f.text_field :title %>
          <h4>body</h4>
            <%= f.text_area :body %>
            <%= f.submit 'Create Book',class: "btn btn-outline-secondary btn-block" %>
        <% end %>
    </div>
    <div class = "col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class = "table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>title</th>
            <th>body</th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <th>
                <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, '/',format: 'jpeg' %><br>
                <%= link_to @user.name, user_path(@book_detail.user) %>
              </th>
              <th><%= @book_detail.title %></th>
              <th><%= @book_detail.body %></th>
                <% if @book_detail.user_id == current_user.id %>
              <th><%= link_to 'Edit', edit_book_path(@book_detail), class: "btn btn-sm btn-success" %></th>
              <th><%= link_to "Destroy", book_path(@book_detail), method: :delete, "data-confirm" => "Are you sure?" %></th>
                <% else %>
                <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>