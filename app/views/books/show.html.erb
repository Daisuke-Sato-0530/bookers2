


<div class = "container px-5 px-sm-0">
  <div class = "row">
    <%= render 'books/sidebar', user: @user %>

    <div class = "col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class = "table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Body</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>
              <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, '/',format: 'jpeg',fallback: "no_image.jpg", size:'50x50'  %><br>
              <%= link_to @user.name, user_path(@book_detail.user) %>
            </th>
            <th><%= @book_detail.title %></th>
            <th><%= @book_detail.body %></th>
            <% if @book_detail.user_id == current_user.id %>
              <th><%= link_to 'Edit', edit_book_path(@book_detail), class: "btn btn-sm btn-success" %></th>
              <th><%= link_to "Destroy", book_path(@book_detail), method: :delete, "data-confirm" => "Are you sure?", class: "btn btn-sm btn-danger"%></th>
              <% else %>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>